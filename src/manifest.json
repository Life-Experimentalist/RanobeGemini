{
	"manifest_version": 3,
	"name": "Ranobe Gemini",
	"version": "3.3.0",
	"description": "Enhances reading experience for web novels using Gemini AI",
	"browser_specific_settings": {
		"gecko": {
			"id": "{33b0347d-8e94-40d6-a169-249716997cc6}",
			"strict_min_version": "109.0"
		},
		"gecko_android": {
			"strict_min_version": "120.0"
		}
	},
	"icons": {
		"16": "icons/logo-light-16.png",
		"32": "icons/logo-light-32.png",
		"48": "icons/logo-light-48.png",
		"96": "icons/logo-light-96.png",
		"128": "icons/logo-light-128.png",
		"256": "icons/logo-light-256.png",
		"512": "icons/logo-light-512.png",
		"1024": "icons/logo-light-1024.png"
	},
	"permissions": [
		"activeTab",
		"storage",
		"tabs",
		"notifications",
		"contextMenus",
		"alarms",
		"downloads",
		"identity"
	],
	"host_permissions": [
		"https://www.googleapis.com/*",
		"https://accounts.google.com/*"
	],
	"sidebar_action": {
		"default_icon": {
			"16": "icons/logo-light-16.png",
			"32": "icons/logo-light-32.png",
			"48": "icons/logo-light-48.png",
			"96": "icons/logo-light-96.png",
			"128": "icons/logo-light-128.png",
			"256": "icons/logo-light-256.png",
			"512": "icons/logo-light-512.png",
			"1024": "icons/logo-light-1024.png"
		},
		"default_title": "Ranobe Gemini Library",
		"default_panel": "library/library.html?sidebar=true"
	},
	"action": {
		"default_icon": {
			"16": "icons/logo-light-16.png",
			"32": "icons/logo-light-32.png",
			"48": "icons/logo-light-48.png",
			"96": "icons/logo-light-96.png",
			"128": "icons/logo-light-128.png",
			"256": "icons/logo-light-256.png",
			"512": "icons/logo-light-512.png",
			"1024": "icons/logo-light-1024.png"
		},
		"default_title": "Ranobe Gemini",
		"default_popup": "popup/popup.html",
		"browser_style": false,
		"theme_icons": [
			{
				"dark": "icons/logo-dark-16.png",
				"light": "icons/logo-light-16.png",
				"size": 16
			},
			{
				"dark": "icons/logo-dark-32.png",
				"light": "icons/logo-light-32.png",
				"size": 32
			},
			{
				"dark": "icons/logo-dark-48.png",
				"light": "icons/logo-light-48.png",
				"size": 48
			},
			{
				"dark": "icons/logo-dark-128.png",
				"light": "icons/logo-light-128.png",
				"size": 128
			},
			{
				"dark": "icons/logo-dark-256.png",
				"light": "icons/logo-light-256.png",
				"size": 256
			},
			{
				"dark": "icons/logo-dark-512.png",
				"light": "icons/logo-light-512.png",
				"size": 512
			},
			{
				"dark": "icons/logo-dark-1024.png",
				"light": "icons/logo-light-1024.png",
				"size": 1024
			}
		]
	},
	"background": {
		"scripts": [
			"background/background.js"
		],
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.ao3.org/*",
				"*://*.archiveofourown.org/*",
				"*://*.fanfiction.net/*",
				"*://*.ranobes.com/*",
				"*://*.ranobes.net/*",
				"*://*.ranobes.top/*",
				"*://*.webnovel.com/*",
				"*://*.scribblehub.com/*"
			],
			"js": [
				"lib/browser-polyfill.min.js",
				"content/content.js"
			],
			"css": [
				"content/content.css",
				"content/gemini-styles.css"
			],
			"run_at": "document_idle"
		}
	],
	"commands": {
		"open-library": {
			"suggested_key": {
				"default": "Alt+Shift+L",
				"mac": "Command+Shift+L"
			},
			"description": "Open the Novel Library"
		},
		"enhance-page": {
			"suggested_key": {
				"default": "Alt+Shift+E",
				"mac": "Command+Shift+E"
			},
			"description": "Enhance current page"
		},
		"summarize-page": {
			"suggested_key": {
				"default": "Alt+Shift+S",
				"mac": "Command+Shift+S"
			},
			"description": "Generate summary for current page"
		}
	},
	"web_accessible_resources": [
		{
			"resources": [
				"lib/browser-polyfill.min.js",
				"icons/*.png",
				"utils/*.js",
				"utils/website-handlers/*.js",
				"content/content.*",
				"config/config.js",
				"popup/*.html",
				"popup/*.js",
				"library/*.html",
				"library/*.css",
				"library/*.js"
			],
			"matches": [
				"*://*.ao3.org/*",
				"*://*.archiveofourown.org/*",
				"*://*.fanfiction.net/*",
				"*://*.ranobes.com/*",
				"*://*.ranobes.net/*",
				"*://*.ranobes.top/*",
				"*://*.webnovel.com/*",
				"*://*.scribblehub.com/*"
			]
		}
	],
	"oauth2": {
		"client_id": "<your_client_id>.apps.googleusercontent.com",
		"scopes": [
			"https://www.googleapis.com/auth/drive.file"
		]
	}
}
